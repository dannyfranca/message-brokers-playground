{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/"],
  "ts-node": {
    "transpileOnly": true,
    "noNotify": true,
    "respawn": true,
    "ignoreWatch": "node_modules",
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
